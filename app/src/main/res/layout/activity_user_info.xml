<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.flowerart.activity.UserInfoActivity">

    <RelativeLayout
        android:id="@+id/publish_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#fdfdef">

        <ImageView
            android:id="@+id/user_info_iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/user_info_tv_save"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/publish_rl"
        android:background="#e6e6cd" />

    <RelativeLayout
        android:id="@+id/user_info_rl_changeUserIcon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/publish_rl"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button">

        <com.cc.widget.circleimageview.CircleImageView
            android:id="@+id/user_info_iv_userIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:src="@mipmap/user" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_info_iv_userIcon"
            android:gravity="center_vertical"
            android:text="更换头像"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_rl_nickName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_info_rl_changeUserIcon"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:background="@null"
            android:id="@+id/user_info_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_nickname"
            android:gravity="center_vertical"
            android:hint="昵称"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/user_info_rl_sign"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_info_rl_nickName"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="个性签名"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:background="@null"
            android:id="@+id/user_info_et_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_sign"
            android:gravity="center_vertical"
            android:hint="个性签名"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/user_info_rl_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_info_rl_sign"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_info_tv_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_sex"
            android:gravity="center_vertical"
            android:text="男"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_rl_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_info_rl_sex"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phoneNum"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="手机号"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:background="@null"
            android:id="@+id/user_info_et_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_phoneNum"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="phone"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_rl_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_info_rl_phoneNum"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="地址"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_info_tv_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_add"
            android:gravity="center_vertical"
            android:text="江西九江"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
