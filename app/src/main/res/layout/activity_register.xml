<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/register_et_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/register_linearlayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:alpha="0.5"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/register_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/register_et_code"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:alpha="0.5"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="14sp" />

        <Button
            android:id="@+id/register_btn_getCode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button"
            android:text="获取验证码"
            android:textColor="@color/colorText"
            android:textSize="14sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/forget_password_et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:alpha="0.5"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:hint="请输入6~10位密码"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/register_iv_frok"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/frok" />

    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forget_password_et_password"
        android:layout_marginTop="52dp"
        android:background="@drawable/shape_button"
        android:text="注册"
        android:textSize="14sp" />

</RelativeLayout>
